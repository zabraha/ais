:root {
  --bg: #0f1220;
  --surface: #171a2b;
  --muted: #8a8a9a;
  --text: #e9e9f5;
  --accent: #6ea8fe;
  --card: #1e2130;
  --badge: #2b2f55;
}

* { box-sizing: border-box; }
html, body, #root { height: 100%; }
body { margin: 0; font-family: Inter, system-ui, -apple-system; background: #0b0e19; color: var(--text); }

.app { padding: 16px; max-width: 1200px; margin: 0 auto; }

.header { padding: 8px 0 12px; }
.header h1 { margin: 0; font-size: 1.75rem; }
.subtitle { color: var(--muted); margin-top: 4px; }

.toolbar { display: grid; grid-template-columns: 1fr; gap: 12px; margin: 12px 0; }

.search-bar { display: flex; gap: 8px; }
.search-input { flex: 1; padding: 12px 14px; border-radius: 8px; border: 1px solid #334; background: #14172a; color: #fff; }
.clear-btn { padding: 10px 12px; border-radius: 8px; border: none; background: #2a2f6a; color: #fff; cursor: pointer; }

.history { display: flex; gap: 8px; align-items: center; flex-wrap: wrap; color: var(--muted); margin-top: 6px; }
.history-item { background: #23264a; color: #fff; border: 1px solid #3a3f8a; padding: 6px 10px; border-radius: 999px; cursor: pointer; }

.content { display: grid; grid-template-columns: 280px 1fr; gap: 16px; align-items: start; }

.filters-panel { padding: 12px; border-radius: 12px; background: #14172a; border: 1px solid #2a2f55; position: sticky; top: 12px; height: fit-content; }
.filters-panel .section { margin-bottom: 14px; }
.filters-panel h4 { margin: 0 0 6px; font-size: 0.95rem; color: #dfe0ff; }
.filters-panel button { display: block; width: 100%; text-align: left; padding: 8px 10px; border: none; background: transparent; color: #e8e8ff; border-radius: 6px; cursor: pointer; }
.filters-panel button.active { background: #2b2f55; }

.filters-panel input { width: 100%; padding: 8px; border-radius: 6px; border: 1px solid #333; background: #1a1d32; color: #fff; margin-top: 6px; display: block; }

.results-area { display: flex; flex-direction: column; gap: 12px; }

.loading, .empty, .error { padding: 12px; text-align: center; color: var(--muted); }

.result-card { padding: 12px; border-radius: 10px; background: #1a1d32; border: 1px solid #2b2f55; cursor: pointer; }
.card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 6px; }
.title { margin: 0; font-size: 1.05rem; }
.relevance { background: #2b2f55; padding: 4px 8px; border-radius: 999px; font-size: 0.8rem; }

.snippet { color: #dce0ff; margin: 6px 0; }

.card-meta { display: flex; gap: 8px; align-items: center; color: #cbd5e1; font-size: 0.85rem; flex-wrap: wrap; }

.badge { background: #2b2f55; padding: 4px 8px; border-radius: 999px; }

.modal-overlay { position: fixed; top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; padding: 20px;
}
.modal-content { background: #1b1e34; padding: 20px; border-radius: 12px; width: min(600px, 100%); position: relative; color: #fff; }
.modal-close { position: absolute; top: 8px; right: 8px; background: transparent; border: none; color: #fff; font-size: 20px; cursor: pointer; }

@media (max-width: 900px) {
  .content { grid-template-columns: 1fr; }
  .filters-panel { position: static; }
}